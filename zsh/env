## This file contains all options related to envrionment configuration
## This is where environment variables (e.g. PATH) are generally set

# Set the PATH environment variable
export PATH=/usr/local/bin:/usr/local/sbin:/usr/local/mysql/bin:/usr/bin:/bin:/usr/sbin:/sbin:/usr/local/bin:/usr/X11/bin:/Users/ryanlevick/.rvm/bin:/usr/local/smlnj-110.75/bin:~/bin

# Load RVM
# [[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm"

# Set up rbenv
[[ -d "$HOME/.rbenv" ]] && PATH="$HOME/.rbenv/bin:$PATH" && eval "$(rbenv init -)" && alias r="rbenv" && alias re="rbenv exec" ]]

# Load NVM
[[ -s "$HOME/.nvm/nvm.sh" ]] && source "$HOME/.nvm/nvm.sh"

# Set default editor
export EDITOR=vim

# Cargo
source $HOME/.cargo/env